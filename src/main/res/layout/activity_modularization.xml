<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/whitePure"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="@string/title_product"
                android:textAllCaps="true"
                android:textColor="@color/bluePrimary"
                android:textSize="@dimen/toolbar_title_text_size"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/layout_info"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/circle_dark_gray"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/sourcecodepro_regular"
                    android:gravity="center"
                    android:text="i"
                    android:textAlignment="center"
                    android:textColor="@color/whitePure"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dashboard_toolbar_menu_margin_end"
            android:contentDescription="@string/msg_default_img_desc"
            android:paddingStart="@dimen/default_horizontal_padding"
            android:paddingTop="@dimen/dashboard_toolbar_menu_padding"
            android:paddingEnd="@dimen/default_horizontal_padding"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_more" />

        <RelativeLayout
            android:id="@+id/img_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            tools:ignore="UnusedAttribute">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/msg_default_img_desc"
                android:src="@drawable/ic_bell" />

            <View
                android:id="@+id/indicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/notif_indicator" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greyPrimary"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:id="@+id/ll_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="left|center"
            android:orientation="vertical"
            android:paddingStart="10sp"
            android:paddingRight="10dp"
            android:saveEnabled="false"
            android:tag="cash_click"
            tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_label_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/available_cash"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                app:lineHeight="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cash_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/blackSecondary"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="0.1sp"
                    app:autoSizeTextType="uniform"
                    app:lineHeight="25dp" />


                <ImageView
                    android:id="@+id/arrow_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/blackSecondary"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyPrimary" />

        <LinearLayout
            android:id="@+id/ll_koin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="left|center"
            android:orientation="vertical"
            android:paddingStart="10sp"
            android:paddingRight="10dp"
            android:saveEnabled="false"
            android:tag="koin_click"
            tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_label_koin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="@string/available_koin"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textStyle="bold"
                app:lineHeight="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_koin_balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/blackSecondary"
                    android:textSize="20sp"
                    app:autoSizeMaxTextSize="20sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="0.1dp"
                    app:autoSizeTextType="uniform"
                    app:lineHeight="25dp" />

                <ImageView
                    android:id="@+id/arrow_koin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/blackSecondary"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>